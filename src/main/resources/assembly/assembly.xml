<assembly>
	<id>assembly</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>classpath:assemblies/bin/properties/jmx_config</directory>
			<outputDirectory>bin/properties/jmx_config</outputDirectory>
			<includes>
				<include>jmxremote.password</include>
			</includes>
			<fileMode>0600</fileMode>
		</fileSet>
		<fileSet>
			<directory>classpath:assemblies/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>classpath:assemblies/app</directory>
			<outputDirectory>app</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/conf</directory>
			<includes>
				<include>*.properties</include>
				<include>*/*.properties</include>
				<include>logback.xml</include>
				<include>*/*.xml</include>
			</includes>
			<outputDirectory>conf</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/${profiles.active}</directory>
			<includes>
				<include>*.properties</include>
				<include>/db/*.properties</include>
				<include>*.xml</include>
			</includes>
			<excludes>
				<exclude>${project.build.directory}/conf/assembly</exclude>
			</excludes>
			<outputDirectory>conf</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>com.dangdang.stock:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>app</outputDirectory>
			<includes>
				<include>com.dangdang.stock:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>